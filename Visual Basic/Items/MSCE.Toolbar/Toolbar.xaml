<UserControl x:Class="$safeitemname$UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:$rootnamespace$"
             mc:Ignorable="d"
                  d:DesignHeight="24" d:DesignWidth="210" MinHeight="24" MinWidth="210" MaxHeight="24">
    <StackPanel Orientation="Horizontal" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0" Name="CheckBox" VerticalAlignment="Center" Margin="2,0">Sample CheckBox</CheckBox>
            <Button Grid.Column="1" Name="Button" VerticalAlignment="Center" MinHeight="24" Padding="4" Margin="2,0" >Sample Button</Button>
        </Grid>
    </StackPanel>
</UserControl>